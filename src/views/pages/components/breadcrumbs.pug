extends ../../layouts/_main

block vars
 - var spacer = " | ";
 - var section = "Components";
 - var page = "Breadcrumbs";
block head_end

block content
 include ../../partials/_icons
 .main-content
  include ../../partials/_sidebar2
  include ../../mixins/_jumbotron
  include ../../mixins/_sectionCard
  .content
    +jumbotron('Breadcrumbs', 'Breadcrumbs are used for showing where the user is inside the application.', 'Component')
    .row
      .col-md-12
        .intro
            p Breadcrumbs enable users to quickly see their location within a path of navigation and move up to a parent level if desired.
        .example-component
          ol.breadcrumb
            li.breadcrumb-item
              a(href="#") Home
            li.breadcrumb-item
              a(href="#") Library
            li.breadcrumb-item.active
              a(href="#") Data
          ol.breadcrumb.breadcrumb-bg
            li.breadcrumb-item
              a(href="#") Home
            li.breadcrumb-item
              a(href="#") Library
            li.breadcrumb-item.active
              a(href="#") Data
      .col-md-12
        pre
          code.html
            |  &lt;ol class=&quot;breadcrumb&quot;&gt;
